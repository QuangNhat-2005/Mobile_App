<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/layout_item_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground">

        <!-- CHECKBOX ĐÃ ĐƯỢC THÊM VÀO ĐÂY -->
        <CheckBox
            android:id="@+id/checkBoxItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"/>

        <ImageView
            android:id="@+id/imageViewGameCart"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/textViewGameNameCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Game"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/textViewGamePriceCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá Game"
                android:textSize="14sp"
                android:textColor="@color/teal_700"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewRemoveItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/darker_gray" />
    </LinearLayout>
</androidx.cardview.widget.CardView>